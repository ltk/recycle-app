<h1>Manage brands</h1>
<%= link_to '+ Add New Brand', new_brand_path, class: "btn btn-success pull-right" %>
<br>
<br>
<br>
<table class="table text-center">
  <thead>
    <tr>
      <th class="text-center">Brand Name</th>
      <th class="text-center">Brand Id</th>
      <th class="text-center">Discount</th>
      <th class="text-center">Preview Image</th>
      <th class="text-center">Update</th>
      <th class="text-center">Delete</th>
    </tr>
  </thead>

  <tbody>
    <% @brands.each do |brand| %>
      <tr>
        <td style="vertical-align:middle;"><%= link_to brand.description, brand_products_path(brand) %></td>
        <td style="vertical-align:middle;"><%= brand.id %></td>
        <td style="vertical-align:middle;"><%= brand.discount %></td>
        <td style="vertical-align:middle;"><%= image_tag brand.image(:thumb) %></td>
        <!-- <td><%= link_to 'Show', brand %></td> -->
        <td style="vertical-align:middle;"><%= link_to 'Edit', edit_brand_path(brand), class: "btn btn-warning"  %></td>
        <td style="vertical-align:middle;"><%= link_to 'Delete', brand, method: :delete, data: { confirm: 'Are you sure you want to delete?' }, class: "btn btn-danger"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>



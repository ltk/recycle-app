<div class="container col-md-push-3 col-md-5">
  <div class="panel panel-default">

    <div class="panel-body">

<%= form_for @product do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this brand from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<form role="form">
  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: "default-input" %>
  </div>
  
  <div class="form-group">
    <%= f.label :brand_id %><br>
    <%= f.text_field :brand_id, class: "default-input" %>
  </div>

  <div class="form-group">
    <%= f.label :collection_year %><br>
    <%= f.text_field :collection_year, class: "default-input" %>
  </div>

  <div class="form-group">
      <%= f.label :image %>
      <%= f.file_field :image, class: "form-control" %>
    </div>

  <div class="actions">
      <%= f.submit "Save", class: "btn btn-primary" %>
    </div>
</form>
</div>
</div>
</div>
<% end %>

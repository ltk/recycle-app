<div class="container col-md-push-3 col-md-5">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h1>Sign up</h1>
    </div>

    <div class="panel-body">
      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <div class="form-group">
          <%= f.label :first_name %>
          <%= f.text_field :first_name, autofocus: true, class: "default-input" %>
        </div>

        <div class="form-group">
          <%= f.label :last_name %>
          <%= f.text_field :last_name, class: "default-input" %>
        </div>

        <div class="form-group">
          <%= f.label :email %>
          <%= f.email_field :email, class: "default-input" %>
        </div>

        <div class="form-group">
          <%= f.label :password %>
          <%= f.password_field :password, class: "default-input" %>
        </div>

        <div class="form-group">
          <%= f.label :zipcode %>
          <%= f.text_field :zipcode, class: "default-input" %>
        </div>

        <div class="form-group">
          <%= f.submit "Sign up", class: "btn btn-primary btn-block" %>
        </div>
      <% end %>
    </div>

    <div class="panel-footer">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
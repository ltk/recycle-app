<div class="row">
  <div class="col-md-offset-2 col-md-4">
    <h3 class="text-left">Create a free account</h3>
  </div>
</div>
  
<div class="row">
  <div class="col-md-offset-2 col-md-4">
    <br>
      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
          <%= devise_error_messages!%>
    <div class="form-group">
    <%= f.text_field :first_name, autofocus: true, class: "default-input", placeholder: "First Name" %></div>
    <div class="form-group">
    <%= f.text_field :last_name, class: "default-input", placeholder: "Last Name" %></div>
    <div class="form-group">
    <%= f.email_field :email, class: "default-input", placeholder: "E-mail Address" %></div>
    <div class="form-group">
    <%= f.password_field :password, class: "default-input", placeholder: "Password" %></div>
  </div>

  <div class="col-md-4">
    <br>
    <div class="form-group">
    <%= f.text_field :street1, class: "default-input", placeholder: "Street Address" %></div>
    <div class="form-group">
    <%= f.text_field :city, class: "default-input", placeholder: "City" %></div>
    <div class="form-group">
    <%= f.text_field :state, class: "default-input", placeholder: "State" %></div>
    <div class="form-group"> 
    <%= f.text_field :zipcode, class: "default-input", placeholder: "Zipcode" %></div>
    <div class="form-group">
    <%= f.submit "Sign up >", class: "btn btn-primary btn-lg btn-block pull-right" %></div>
  <% end %>
                <br>
                <br>
                <br>
    
           <p>By clicking "Sign up", you agree to our terms of service and <a href="http://www.iubenda.com/privacy-policy/316635" target="_blank">privacy policy</a>.</p>
  </div>
</div>
    
        <br>
        <br>

<div class="row">
  <div class="col-md-offset-4 col-md-4 text-center">
    
    <hr>
  
    <h3>Already have an account?</h3>
    
    <br>
    
    <%= link_to "Log In",  new_user_session_path, class: "btn btn-info btn-lg" %>
  
  </div>
</div>
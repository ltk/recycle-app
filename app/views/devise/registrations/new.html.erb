 <div class="row">

    <div class="main">



     <div class="row">
    <h3 class="text-center">Let's Sign-Up!</h3>
       
          <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>

            <div class="form-group">
              <%= f.label :first_name %>
              <%= f.text_field :first_name, autofocus: true, class: "default-input" %>
            </div>

            <div class="form-group">
              <%= f.label :last_name %>
              <%= f.text_field :last_name, class: "default-input" %>
            </div>

            <div class="form-group">
              <%= f.label :email %>
              <%= f.email_field :email, class: "default-input" %>
            </div>

            <div class="form-group">
              <%= f.label :password %>
              <%= f.password_field :password, class: "default-input" %>
            </div>

            <div class="form-group">
              <%= f.label :zipcode %>
              <%= f.text_field :zipcode, class: "default-input" %>
            </div>

            <div class="form-group">
              <%= f.submit "Sign up", class: "btn btn-primary btn-block" %>
            </div>
          <% end %>
        </div>
      </form>
      </div>
    </div>


